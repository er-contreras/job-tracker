#! /usr/bin/env ruby

require_relative '../lib/app'
# require_relative 'manage_files'

OPTIONS = {
  '1' => :add_job,
  '2' => :list_all_jobs,
  '3' => :update_status,
  '4' => :exit
}

class JobTracker
  # include ManageFiles

  def initialize
    @actions = OPTIONS
    @status = true
  end

  def job_tracker
    app = App.new

    puts
    puts 'Welcome to Job Tracker'
    while @status
      puts
      puts 'Please choose an option by enterin a number:'
      puts '1 - Add new job'
      puts '2 - List all job applications'
      puts '3 - Update status'
      puts '4 - Exit'

      option = gets.chomp
      action = @actions[option]

      call_case(app, action)
    end
  end

  def call_case(app, action)
    if action
      app.send(action)
      @status = false if action == :exit
    else
      puts('Sorry, you choose a wrong option')
    end
  end
end

JobTracker.new.job_tracker
